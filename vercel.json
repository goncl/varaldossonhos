{
  "version": 2,
  "public": true,
  "builds": [
    { "src": "api/index.js", "use": "@vercel/node" },
    { "src": "index.html", "use": "@vercel/static" },
    { "src": "css/(.*)", "use": "@vercel/static" },
    { "src": "js/(.*)", "use": "@vercel/static" },
    { "src": "imagens/(.*)", "use": "@vercel/static" },
    { "src": "componentes/(.*)", "use": "@vercel/static" },
    { "src": "configuração/(.*)", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/index.js" },
    {
      "src": "/(css|js|imagens|componentes|configuração)/(.*)",
      "dest": "/$1/$2"
    },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
